<div class="container"> 
      <div class="row"> 
      	<div class="col-4">
<h2>Users</h2> 
<table class="table table-striped">
	<thead>
	   <tr>
		 <th>image</th>
		 <th>name</th>
	   </tr>
	</thead>
	
      <tbody>
		<% @users.each do |user| %>
	    <tr>
	    	<td><%= user.profile_image_id %></td>
	    	<td><%= user.name %></td>
        </tr>
      <% end %>
   </tbody>
</table>
</div>
</div>
</div>
<h2>New book</h2>

<%= form_for(@user) do |f| %>
 
    <h4>title</h4>
    <%= f.text_field :name %>
 
    <h4>Opinion</h4>
    <%= f.text_area :introduction %>
 
    <br><%= f.submit 'Create Book' %></br>
 
<% end %>
