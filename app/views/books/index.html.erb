<div class="container"> 
      <div class="row"> 
      	<div class="col-md-3">
            <div class="tl">
            	 <h2>User info</h2>
                 <h4>name : <%= @user.name %></h4>
                 <h4>introduction : <%= @user.introduction %></h4>
           </div>
           <div class="top">
           	<h2>New book</h2>

            <%= form_for(@book) do |f| %>
 
            <h4>title</h4>
            <%= f.text_field :title %>
 
            <h4>Opinion</h4>
             <%= f.text_area :body %>
 
             <br><%= f.submit 'Create Book',class:"btn btn-primary"%></br>
            <% end %>
           </div>
          </div>
          <div class="col-md-9">
              <h2>Books</h2> 
              <table class="table">
	            <thead>
	              <tr>
		          <th>title</th>
		          <th>Opinion</th>
	              </tr>
	            </thead>
	
	         <tbody>
		        <% @books.each do |book| %>
	             <tr>
	    	     <td><%= book.title %></td>
	    	     <td><%= book.body %></td>
                 </tr>
              <% end %>
             </tbody>
             </table>
           </div>
         </div>
       </div>