<h2>Book detail</h2>
<table class="table table-striped">
	<thead>
	   <tr>
		 <th>title</th>
		 <th>Opinion</th>
	   </tr>
	</thead>
	
	<tbody>
		<% @books.each do |book| %>
	    <tr>
	    	<td><%= book.title %></td>
	    	<td><%= book.body %></td>
	    	<td>
	    		<%= link_to "edit", edit_book_path(book.id) %>
	    		<%= link_to "destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %>
	    	</td>
        </tr>
      <% end %>
   </tbody>
</table>

<h2>New book</h2>

<%= form_for(@book) do |f| %>
 
    <h4>title</h4>
    <%= f.text_field :title %>
 
    <h4>Opinion</h4>
    <%= f.text_area :body %>
 
    <br><%= f.submit 'Create Book' %></br>
 
<% end %>
